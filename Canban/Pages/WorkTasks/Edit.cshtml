@page
@model Canban.Pages.WorkTasks.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>WorkTask</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="WorkTask.TaskID" />
            <div class="form-group">
                <label asp-for="WorkTask.TaskName" class="control-label"></label>
                <input asp-for="WorkTask.TaskName" class="form-control" />
                <span asp-validation-for="WorkTask.TaskName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkTask.until" class="control-label"></label>
                <input asp-for="WorkTask.until" class="form-control" />
                <span asp-validation-for="WorkTask.until" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkTask.TaskDescription" class="control-label"></label>
                <input asp-for="WorkTask.TaskDescription" class="form-control" />
                <span asp-validation-for="WorkTask.TaskDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkTask.UserID" class="control-label"></label>
                <select asp-for="WorkTask.UserID" class="form-control" asp-items="ViewBag.UserList">
                    <option selected value="">None</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="WorkTask.BucketID" class="control-label"></label>
                <select asp-for="WorkTask.BucketID" class="form-control" asp-items="ViewBag.BucketID"></select>
            </div>
            <div class="form-group">
                <label asp-for="WorkTask.Price" class="control-label"></label>
                <input asp-for="WorkTask.Price" class="form-control" />
                <span asp-validation-for="WorkTask.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/WorkGroups/Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
